@model MarininCars.Models.Orders

@{
    ViewBag.Title = "Edit_Order";
}

<h2>Редактирование заказа</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.IdMark)
    @Html.HiddenFor(model => model.IdModel)
    @Html.HiddenFor(model => model.IdModification)

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <p class="control-label col-md-2">Имя, фамилия</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name_Female, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Телефон</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Секретное слово</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Secret_Vord, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Редактировать" class="btn btn-default" />
            </div>
        </div>
    </div>
}